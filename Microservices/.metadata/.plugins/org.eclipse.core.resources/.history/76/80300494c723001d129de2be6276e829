package com.globallogic.department.services;

import java.util.List;

import org.springframework.stereotype.Component;
import org.springframework.stereotype.Service;

import com.globallogic.department.entity.DepartmentEntity;


@Component
public interface DepartmentEntityService {
	
public List<DepartmentEntity> showEmployees();
	
	public List<DepartmentEntity> addEmployees(DepartmentEntity dep);
	
	public List<DepartmentEntity> updateEmployees(DepartmentEntity dep);
	
	public List<DepartmentEntity> deleteEmployees(long id);

}
